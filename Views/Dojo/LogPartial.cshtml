@model LoginUser

    <div class="login">
            <form action="confirm" method="POST">
                <span asp-validation-for="LogEmail"></span>
                <h1>Email : <input type="text" asp-for="LogEmail"> </h1>
                <span asp-validation-for="LogPassword"></span>
                <h1>Password: <input type="password" asp-for="LogPassword"> </h1>
                <input type="submit" value="Login">
            </form>
    </div>